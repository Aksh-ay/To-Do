<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.todoclass2.MainActivity">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:orientation="horizontal"
       android:layout_marginTop="30dp">

       <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
           android:layout_weight="1"
        android:layout_margin="20dp"
        android:id="@+id/expenseDetailTitleTextView"/>

       <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Category"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:id="@+id/expenseDetailCategoryTextView"/>

       <EditText
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:hint="Enter Price"
           android:layout_margin="20dp"
           android:id="@+id/expenseDetailPriceTextView"/>

       <EditText
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:inputType="date"
           android:hint="Enter Date"
           android:focusable="false"
           android:layout_margin="20dp"
           android:id="@+id/expenseDetailDateTextView"/>


   </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:id="@+id/expenseDetailSubmitButton"/>


</LinearLayout>
